<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"

        >

        <ScrollView
            android:scrollbarThumbVertical="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/record2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/login_title_size" />

                <TextView
                    android:id="@+id/txtno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/txt"
                    android:textColor="@color/black"
                    android:textSize="@dimen/login_title_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/tv_date"
                    android:text="@string/date"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/login_title_size" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"

                    android:textColor="@color/black"
                    android:textSize="@dimen/login_title_size" />


                <LinearLayout
                    android:id="@+id/linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/txt"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edit_theme"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:id="@+id/layout_mtgselection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mtg_group"
                            android:textSize="@dimen/tv_size_medium_tab"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/sp_mtg_group"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_theme_black"
                            android:drawableRight="@drawable/spinner"
                            android:gravity="center_vertical"
                            android:hint="@string/selcet_mtg_group"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/mtg_member"
                            android:textSize="@dimen/tv_size_medium_tab"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/sp_mtg_person"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/edit_theme_black"
                            android:drawableRight="@drawable/spinner"
                            android:gravity="center_vertical"
                            android:hint="@string/selcet_mtg_person"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />


                    </LinearLayout>


                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_toLeftOf="@+id/mview"

                            android:gravity="center_vertical"
                            android:text="@string/animal_owner_name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />

                        <EditText
                            android:id="@+id/edt_name"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:inputType="textPersonName"
                            android:layout_toRightOf="@+id/mview"
                            android:background="@drawable/edit_theme_black"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_below="@+id/edt_name"
                            android:layout_marginTop="15dp"
                            android:layout_toLeftOf="@+id/mview"

                            android:gravity="center_vertical"
                            android:text="@string/gram_panchayat"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />

                        <TextView
                            android:id="@+id/edt_gramPanchayat"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_below="@+id/edt_name"
                            android:layout_marginTop="15dp"
                            android:layout_toRightOf="@+id/mview"
                            android:background="@drawable/edit_theme_black"
                            android:drawableRight="@drawable/spinner"
                            android:gravity="center_vertical"
                            android:hint="@string/gram_panchayat"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_below="@+id/edt_gramPanchayat"
                            android:layout_marginTop="15dp"
                            android:layout_toLeftOf="@+id/mview"

                            android:gravity="center_vertical"
                            android:text="@string/village"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />

                        <TextView
                            android:id="@+id/edt_village"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_below="@+id/edt_gramPanchayat"
                            android:layout_marginTop="15dp"
                            android:layout_toRightOf="@+id/mview"
                            android:background="@drawable/edit_theme_black"
                            android:drawableRight="@drawable/spinner"
                            android:gravity="center_vertical"
                            android:hint="@string/village"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_below="@+id/edt_village"
                            android:layout_marginTop="15dp"
                            android:layout_toLeftOf="@+id/mview"

                            android:gravity="center_vertical"
                            android:text="@string/mobile_number"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />

                        <EditText
                            android:id="@+id/edt_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_below="@+id/edt_village"
                            android:layout_marginTop="15dp"
                            android:layout_toRightOf="@+id/mview"
                            android:background="@drawable/edit_theme_black"
                            android:gravity="center_vertical"
                            android:inputType="phone"
                            android:maxEms="10"
                            android:maxLength="10"
                            android:digits="0123456789"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_below="@+id/edt_mobile"
                            android:layout_marginTop="15dp"
                            android:layout_toLeftOf="@+id/mview"
                            android:gravity="center_vertical"
                            android:text="@string/address"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />

                        <EditText
                            android:id="@+id/edt_address"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_below="@+id/edt_mobile"
                            android:layout_marginTop="15dp"
                            android:inputType="textMultiLine"
                            android:layout_toRightOf="@+id/mview"
                            android:background="@drawable/edit_theme_black"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_below="@+id/edt_address"
                            android:layout_marginTop="20dp"
                            android:layout_toLeftOf="@+id/mview"
                            android:gravity="center_vertical"
                            android:text="@string/count_dodharu_bakari"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />

                        <EditText
                            android:id="@+id/edt_bakari_count"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_below="@+id/edt_address"
                            android:layout_marginTop="20dp"
                            android:layout_toRightOf="@+id/mview"
                            android:background="@drawable/edit_theme_black"
                            android:gravity="center_vertical"
                            android:inputType="number"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_below="@+id/edt_bakari_count"
                            android:layout_marginTop="20dp"
                            android:layout_toLeftOf="@+id/mview"
                            android:gravity="center_vertical"
                            android:text="@string/totle_milk_production"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />

                        <EditText
                            android:id="@+id/edt_totle_amount"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_below="@+id/edt_bakari_count"
                            android:layout_marginTop="20dp"
                            android:inputType="numberDecimal"
                            android:layout_toRightOf="@+id/mview"
                            android:background="@drawable/edit_theme_black"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />

                        <TextView
                            android:id="@+id/tv_tag_no"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_below="@+id/edt_totle_amount"
                            android:layout_marginTop="15dp"
                            android:layout_toLeftOf="@+id/mview"
                            android:gravity="center_vertical"

                            android:text="@string/upbhog_amount"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />

                        <EditText
                            android:id="@+id/edt_upbhog_amount"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_below="@+id/edt_totle_amount"
                            android:layout_marginTop="15dp"
                            android:layout_toRightOf="@+id/mview"
                            android:background="@drawable/edit_theme_black"
                            android:gravity="center_vertical"
                            android:inputType="numberDecimal"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_below="@+id/edt_upbhog_amount"
                            android:layout_marginTop="15dp"
                            android:layout_toLeftOf="@+id/mview"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="0dp"
                            android:text="@string/avail_amount_for_sale"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />

                        <EditText
                            android:id="@+id/edt_avail_amount"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_below="@+id/edt_upbhog_amount"
                            android:layout_marginTop="15dp"
                            android:layout_toRightOf="@+id/mview"
                            android:background="@drawable/edit_theme_black"
                            android:gravity="center_vertical"
                            android:inputType="numberDecimal"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/tv_size_medium_tab" />

                        <View
                            android:id="@+id/mview"
                            android:layout_width="20dp"
                            android:layout_height="0dp"
                            android:layout_centerHorizontal="true" />


                    </RelativeLayout>


                </LinearLayout>


                <TextView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_layout"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="15dp"
                    android:drawableRight="@drawable/_next"
                    android:padding="10dp"
                    android:text="@string/next"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/privious"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_layout"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="15dp"
                    android:drawableLeft="@drawable/_privious"
                    android:padding="10dp"
                    android:text="@string/previous"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:visibility="gone" />


                <!-- <LinearLayout
                     android:id="@+id/tv_addRecord"
                     android:layout_width="match_parent"
                     android:layout_height="40dp"
                     android:layout_below="@+id/linear_layout"
                     android:layout_marginLeft="20dp"
                     android:layout_marginTop="50dp"
                     android:layout_marginRight="10dp"
                     android:layout_marginBottom="50dp"
                     android:layout_toLeftOf="@+id/view1"
                     android:background="@drawable/button_theme"
                     android:backgroundTint="@android:color/black"
                     android:gravity="center_horizontal"
                     android:orientation="horizontal">

                     <ImageView
                         android:layout_width="20dp"
                         android:layout_height="20dp"
                         android:layout_gravity="center_vertical"
                         android:src="@drawable/addmore" />

                     <TextView

                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:gravity="center"
                         android:paddingLeft="20dp"
                         android:text="@string/add_record"
                         android:textColor="@android:color/white" />


                 </LinearLayout>
    -->

                <View
                    android:id="@+id/view1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/tv_save"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/linear_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="50dp"
                    android:layout_toRightOf="@+id/view1"
                    android:background="@drawable/button_theme"
                    android:gravity="center"
                    android:text="@string/save"
                    android:textColor="@android:color/white" />
            </RelativeLayout>


        </ScrollView>


    </RelativeLayout>
</layout>
