<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingBottom="40dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layout_logo"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/img_logo"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:src="@drawable/logo"
                    android:layout_marginBottom="20dp"
                    />


                <TextView
                    android:id="@+id/tv_title"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/img_logo"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/login_title_size"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/login_title"
                    android:minEms="2"/>
            </RelativeLayout>



            <RelativeLayout
                android:layout_below="@+id/layout_logo"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"/>


                <EditText
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/edt_mobile_number"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:layout_below="@+id/tv_number"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edit_theme"
                    android:textSize="16dp"
                    android:hint="@string/enter_number"
                    />

                <ImageView
                    android:id="@+id/img_next"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@+id/tv_number"
                    android:layout_marginBottom="15dp"
                    android:layout_alignEnd="@+id/edt_mobile_number"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow"/>

                <TextView
                    android:id="@+id/tv_otp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/edt_mobile_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_otp"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"/>

                <EditText
                    android:id="@+id/edt_otp"
                    android:layout_below="@+id/tv_otp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="16dp"
                    android:hint="@string/enter_otp"
                    android:background="@drawable/edit_theme"
                    android:layout_marginBottom="45dp"/>


                <Button

                    android:id="@+id/bt_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="@string/submit"
                    android:textSize="20dp"
                    android:layout_below="@+id/edt_otp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/button_theme"/>


            </RelativeLayout>






        </RelativeLayout>



    </ScrollView>



</RelativeLayout>


