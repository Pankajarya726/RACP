<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.info.InfoActivity">


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <EditText
                android:id="@+id/serchView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingHorizontal="10dp"
                android:drawablePadding="5dp"
                android:background="@drawable/edit_theme"
                android:hint="@string/search"
                android:drawableLeft="@drawable/ic__search">


            </EditText>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_notification"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/serchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </android.support.v7.widget.RecyclerView>



    </RelativeLayout>
</layout>