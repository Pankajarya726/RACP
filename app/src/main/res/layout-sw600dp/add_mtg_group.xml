<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="40dp"
            android:paddingRight="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/mtg_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size" />

                <EditText
                    android:id="@+id/edt_mtgname"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:maxLength="60"
                    android:inputType="textPersonName"
                    android:background="@drawable/edit_theme"
                    android:paddingHorizontal="10dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/gram_panchayat"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size" />


                <TextView
                    android:id="@+id/gramPanchayat"
                    ddingHorizontal="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_theme"
                    android:drawableRight="@drawable/spinner"
                    android:gravity="center_vertical"
                    android:hint="@string/gram_panchayat"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/village"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size" />

                <TextView
                    android:id="@+id/gram"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_theme"
                    android:drawableRight="@drawable/spinner"
                    android:gravity="center_vertical"
                    android:hint="@string/village"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"></TextView>

            </LinearLayout>


            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="45dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/button_theme"
                android:text="@string/save"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

        </LinearLayout>


    </RelativeLayout>
</layout>