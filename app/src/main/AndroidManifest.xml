            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.Form.vipran_talika.VipranTableActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.Form.bakara_rotation.RotationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.Form.clean_milkkit.MilkKitActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.Form.feed_suppliment.FeedSuppliment"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".ui.Form.adoption.Adoption"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.Form.mtg_meeting.MtgMeeting"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.Form.mtg_prasikshan.MtgTraining"
            android:screenOrientation="portrait"
